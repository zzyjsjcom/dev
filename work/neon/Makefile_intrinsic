GCC=/home/zzy/bin/gcc_sve/bin/aarch64-linux-gnu-gcc
CFLAGS=-g -Wall -march=armv8.2-a -O2
LDFLAGS= # --static

neon_build=${GCC} ${CFLAGS} -o neon_hello neon_hello.c
neon_clean=rm neon_hello

neon_hello: neon_hello.c
	${neon_build}

.PHONY: clean done
clean:
	${neon_clean}

done:
	${neon_build}
	./neon_hello
	${neon_clean}
